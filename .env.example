# --- Database Credentials ---
# These are used by both the Postgres container to initialize
# and the Backend container to connect.
DB_NAME=livejourney
DB_USER=postgres
DB_PASSWORD=your_secure_db_password_here
DB_HOST=db
DB_PORT=5432

# --- Initial Setup Credentials ---
# Used during the first launch or fresh resets to create
# your master account and seed the journey data.
INITIAL_USERNAME=dev
INITIAL_PASSWORD=admin
INITIAL_DISPLAY_NAME="Your Name"

# --- Django Settings ---
# Set to False in production
DEBUG=False
